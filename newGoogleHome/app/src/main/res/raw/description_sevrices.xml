<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0" >
	<specVersion>
		<major>1</major>
		<minor>0</minor>
	</specVersion>
	<actionList>
		<action>
			<name>GetAskingState</name>
			<argumentList>
				<argument>
					<name>AskingState</name>
					<relatedStateVariable>AskingState</relatedStateVariable>
					<direction>out</direction>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>SetAvailableShowers</name>
			<argumentList>
				<argument>
					<name>NbAvailablaShowers</name>
					<direction>in</direction>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>GetBuildingFloor</name>
			<argumentList>
				<argument>
					<name>nameBuilding</name>
					<direction>out</direction>
				</argument>
				<argument>
					<name>nameFloor</name>
					<direction>out</direction>
				</argument>
			</argumentList>
		</action>
	</actionList>
	<serviceStateTable>
		<stateVariable sendEvents="yes">
			<name>AskingState</name>
			<dataType>string</dataType>
		</stateVariable>
	</serviceStateTable>
</scpd>
