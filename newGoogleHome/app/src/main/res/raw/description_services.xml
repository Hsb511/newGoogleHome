<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <actionList>
        <action>
            <name>GetAskingState</name>
            <argumentList>
                <argument>
                    <name>AskingState</name>
                    <relatedStateVariable>AskingState</relatedStateVariable>
                    <direction>out</direction>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetShowersInformation</name>
            <argumentList>
                <argument>
                    <name>NbAvailableShowers</name>
                    <relatedStateVariable>nbShower</relatedStateVariable>
                    <direction>in</direction>
                </argument>
                <argument>
                    <name>NbTotalShowers</name>
                    <relatedStateVariable>nbTotalShowers</relatedStateVariable>
                    <direction>in</direction>
                </argument>
                <argument>
                    <name>FloorConsumption</name>
                    <relatedStateVariable>floorConsumption</relatedStateVariable>
                    <direction>in</direction>
                </argument>
                <argument>
                    <name>Result</name>
                    <relatedStateVariable>Result</relatedStateVariable>
                    <direction>out</direction>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>GetBuildingFloor</name>
            <argumentList>
                <argument>
                    <name>nameBuilding</name>
                    <relatedStateVariable>Result</relatedStateVariable>
                    <direction>out</direction>
                </argument>
                <argument>
                    <name>nameFloor</name>
                    <relatedStateVariable>Result</relatedStateVariable>
                    <direction>out</direction>
                </argument>
            </argumentList>
        </action>
    </actionList>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>AskingState</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>nbShower</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>floorConsumption</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>Result</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>nbTotalShowers</name>
            <dataType>string</dataType>
        </stateVariable>
    </serviceStateTable>
</scpd>
